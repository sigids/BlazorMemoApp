@page "/master/orders"
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "Admin,User")]
@rendermode InteractiveServer
@using BlazorMemoApp.Models
@using Microsoft.EntityFrameworkCore
@using System.Data.Odbc
@using System.Security.Claims
@inject BlazorMemoApp.Data.ApplicationDbContext Db
@inject BlazorMemoApp.Services.BuyerPrivilegeService BuyerPrivilegeService
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject ILogger<OrderMaster> Logger

<h1>Order Master</h1>
<hr />

<div class="row mb-3">
    <div class="col-auto">
        <button class="btn btn-primary" @onclick="ShowAddForm">Add New Order</button>
    </div>
    <div class="col-auto">
        <div class="input-group">
            <span class="input-group-text">Search</span>
            <input class="form-control" style="width:250px;" @bind="_searchText" @bind:event="oninput" placeholder="Buyer, Style, Order No..." />
        </div>
    </div>
    <div class="col-auto">
        <select class="form-select" style="width:100px;" @bind="_pageSize" @bind:after="OnPageSizeChanged">
            <option value="10">10</option>
            <option value="25">25</option>
            <option value="50">50</option>
            <option value="100">100</option>
        </select>
    </div>
</div>

@if (showForm)
{
    <div class="card mb-4">
        <div class="card-header">
            @(editingOrder.Id == 0 ? "Add New Order" : "Edit Order")
        </div>
        <div class="card-body">
            <EditForm Model="editingOrder" OnValidSubmit="SaveOrder">
                <DataAnnotationsValidator />
                <div class="row g-3">
                    <div class="col-md-4 position-relative">
                        <label class="form-label">Buyer</label>
                        <input class="form-control" 
                               @bind-value="buyerSearchText" 
                               @bind-value:event="oninput"
                               @onfocus="() => showBuyerDropdown = true"
                               placeholder="Type to filter..." />
                        @if (showBuyerDropdown && filteredBuyers.Any())
                        {
                            <div class="list-group position-absolute z-3" style="max-height:200px; overflow:auto; width:100%;">
                                @foreach (var buyer in filteredBuyers)
                                {
                                    <button type="button" class="list-group-item list-group-item-action" @onclick="() => SelectBuyer(buyer)">
                                        @buyer.Name - @buyer.NameAbbr
                                    </button>
                                }
                            </div>
                        }
                        <ValidationMessage For="() => editingOrder.BuyerId" />
                    </div>
                    <div class="col-md-4 position-relative">
                        <label class="form-label">Style</label>
                        <input class="form-control" 
                               @bind-value="styleSearchText" 
                               @bind-value:event="oninput"
                               @onfocus="() => showStyleDropdown = true"
                               placeholder="Type to filter..."
                               disabled="@(editingOrder.BuyerId == 0)" />
                        @if (showStyleDropdown && filteredStyles.Any())
                        {
                            <div class="list-group position-absolute z-3" style="max-height:200px; overflow:auto; width:100%;">
                                @foreach (var style in filteredStyles)
                                {
                                    <button type="button" class="list-group-item list-group-item-action" @onclick="() => SelectStyle(style)">
                                        @style.StyleName - @style.Description
                                    </button>
                                }
                            </div>
                        }
                        <ValidationMessage For="() => editingOrder.StyleId" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Order No</label>
                        <InputText class="form-control" @bind-Value="editingOrder.OrderNo" />
                        <ValidationMessage For="() => editingOrder.OrderNo" />
                    </div>
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-success">Save</button>
                    <button type="button" class="btn btn-secondary" @onclick="CancelEdit">Cancel</button>
                    <button type="button" class="btn btn-info" @onclick="Synchronize" disabled="@(_syncing || editingOrder.BuyerId == 0 || editingOrder.StyleId == 0)">
                        @(_syncing ? "Synchronizing..." : "Synchronize")
                    </button>
                </div>
                @if (!string.IsNullOrEmpty(_syncMessage))
                {
                    <div class="alert @(_syncSuccess ? "alert-success" : "alert-danger") alert-dismissible fade show mt-2" role="alert">
                        @_syncMessage
                        <button type="button" class="btn-close" @onclick="() => _syncMessage = string.Empty"></button>
                    </div>
                }
            </EditForm>
        </div>
    </div>
}

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Buyer</th>
            <th>Style</th>
            <th>Order No</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in PagedData)
        {
            <tr>
                <td>@order.Id</td>
                <td>@(order.Buyer?.Name ?? "-") - @(order.Buyer?.NameAbbr ?? "")</td>
                <td>@(order.Style?.StyleName ?? "-")</td>
                <td>@order.OrderNo</td>
                <td>
                    <button class="btn btn-sm btn-warning" @onclick="() => EditOrder(order)">Edit</button>
                    <button class="btn btn-sm btn-danger" @onclick="() => DeleteOrder(order)">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex justify-content-between align-items-center">
    <div>Showing @(FilteredData.Any() ? (_currentPage - 1) * _pageSize + 1 : 0) - @(Math.Min(_currentPage * _pageSize, FilteredData.Count())) of @FilteredData.Count()</div>
    <nav>
        <ul class="pagination pagination-sm mb-0">
            <li class="page-item @(_currentPage == 1 ? "disabled" : "")">
                <button type="button" class="page-link" @onclick="PrevPage" disabled="@(_currentPage == 1)">Prev</button>
            </li>
            @for (var p = 1; p <= Math.Min(TotalPages, 10); p++)
            {
                var page = p;
                <li class="page-item @(p == _currentPage ? "active" : "")">
                    <button type="button" class="page-link" @onclick="() => GotoPage(page)">@p</button>
                </li>
            }
            @if (TotalPages > 10)
            {
                <li class="page-item disabled"><span class="page-link">...</span></li>
                <li class="page-item @(TotalPages == _currentPage ? "active" : "")">
                    <button type="button" class="page-link" @onclick="() => GotoPage(TotalPages)">@TotalPages</button>
                </li>
            }
            <li class="page-item @(_currentPage == TotalPages ? "disabled" : "")">
                <button type="button" class="page-link" @onclick="NextPage" disabled="@(_currentPage == TotalPages)">Next</button>
            </li>
        </ul>
    </nav>
</div>

@code {
    private List<BuyerStyleOrderModel> orders = new();
    private List<MemoAdressModel> buyers = new();
    private List<BuyerStyleModel> styles = new();
    private BuyerStyleOrderModel editingOrder = new();
    private bool showForm = false;
    
    private string buyerSearchText = string.Empty;
    private string styleSearchText = string.Empty;
    private bool showBuyerDropdown = false;
    private bool showStyleDropdown = false;
    private string _searchText = string.Empty;
    private int _pageSize = 10;
    private int _currentPage = 1;
    private bool _syncing = false;
    private string _syncMessage = string.Empty;
    private bool _syncSuccess = false;
    private const string MODEL_NAME = "OrderMaster";
    
    private IEnumerable<MemoAdressModel> filteredBuyers => 
        string.IsNullOrWhiteSpace(buyerSearchText)
            ? buyers
            : buyers.Where(b => 
                (b.Name?.Contains(buyerSearchText, StringComparison.OrdinalIgnoreCase) ?? false) ||
                (b.NameAbbr?.Contains(buyerSearchText, StringComparison.OrdinalIgnoreCase) ?? false));

    private IEnumerable<BuyerStyleModel> filteredStyles => 
        string.IsNullOrWhiteSpace(styleSearchText)
            ? styles.Where(s => s.BuyerId == editingOrder.BuyerId)
            : styles.Where(s => s.BuyerId == editingOrder.BuyerId &&
                ((s.StyleName?.Contains(styleSearchText, StringComparison.OrdinalIgnoreCase) ?? false) ||
                (s.Description?.Contains(styleSearchText, StringComparison.OrdinalIgnoreCase) ?? false)));

    private IEnumerable<BuyerStyleOrderModel> FilteredData => string.IsNullOrWhiteSpace(_searchText)
        ? orders
        : orders.Where(o =>
            (o.Buyer?.Name ?? "").Contains(_searchText, StringComparison.OrdinalIgnoreCase) ||
            (o.Buyer?.NameAbbr ?? "").Contains(_searchText, StringComparison.OrdinalIgnoreCase) ||
            (o.Style?.StyleName ?? "").Contains(_searchText, StringComparison.OrdinalIgnoreCase) ||
            (o.OrderNo ?? "").Contains(_searchText, StringComparison.OrdinalIgnoreCase));

    private List<BuyerStyleOrderModel> PagedData => FilteredData.Skip((_currentPage - 1) * _pageSize).Take(_pageSize).ToList();
    private int TotalPages => Math.Max(1, (int)Math.Ceiling(FilteredData.Count() / (double)_pageSize));

    private void OnPageSizeChanged() => _currentPage = 1;
    private void PrevPage() { if (_currentPage > 1) _currentPage--; }
    private void NextPage() { if (_currentPage < TotalPages) _currentPage++; }
    private void GotoPage(int p) => _currentPage = Math.Clamp(p, 1, TotalPages);

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        // Get current user ID for buyer privilege filtering
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var userId = authState.User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
        
        var allBuyers = await Db.MemoAddresses.Where(a => a.Type.Contains("B")).ToListAsync();
        buyers = !string.IsNullOrEmpty(userId) 
            ? await BuyerPrivilegeService.FilterBuyersAsync(userId, allBuyers) 
            : allBuyers;
        
        // Filter orders and styles to only show those for allowed buyers
        var allowedBuyerIds = buyers.Select(b => b.Id).ToHashSet();
        orders = await Db.BuyerStyleOrders.Include(o => o.Buyer).Include(o => o.Style)
            .Where(o => allowedBuyerIds.Contains(o.BuyerId))
            .ToListAsync();
        styles = await Db.BuyerStyles
            .Where(s => allowedBuyerIds.Contains(s.BuyerId))
            .ToListAsync();
    }

    private void ShowAddForm()
    {
        editingOrder = new BuyerStyleOrderModel();
        buyerSearchText = string.Empty;
        styleSearchText = string.Empty;
        showForm = true;
    }

    private void EditOrder(BuyerStyleOrderModel order)
    {
        editingOrder = new BuyerStyleOrderModel
        {
            Id = order.Id,
            BuyerId = order.BuyerId,
            StyleId = order.StyleId,
            OrderNo = order.OrderNo
        };
        var buyer = buyers.FirstOrDefault(b => b.Id == order.BuyerId);
        buyerSearchText = buyer != null ? $"{buyer.Name} - {buyer.NameAbbr}" : string.Empty;
        var style = styles.FirstOrDefault(s => s.Id == order.StyleId);
        styleSearchText = style != null ? $"{style.StyleName} - {style.Description}" : string.Empty;
        showForm = true;
    }

    private void CancelEdit()
    {
        showForm = false;
        editingOrder = new BuyerStyleOrderModel();
        buyerSearchText = string.Empty;
        styleSearchText = string.Empty;
        showBuyerDropdown = false;
        showStyleDropdown = false;
    }

    private void SelectBuyer(MemoAdressModel buyer)
    {
        editingOrder.BuyerId = buyer.Id;
        buyerSearchText = $"{buyer.Name} - {buyer.NameAbbr}";
        showBuyerDropdown = false;
        editingOrder.StyleId = 0;
        styleSearchText = string.Empty;
    }

    private void SelectStyle(BuyerStyleModel style)
    {
        editingOrder.StyleId = style.Id;
        styleSearchText = $"{style.StyleName} - {style.Description}";
        showStyleDropdown = false;
    }

    private async Task SaveOrder()
    {
        if (editingOrder.BuyerId == 0 || editingOrder.StyleId == 0 || string.IsNullOrWhiteSpace(editingOrder.OrderNo))
        {
            return;
        }

        if (editingOrder.Id == 0)
        {
            Db.BuyerStyleOrders.Add(editingOrder);
        }
        else
        {
            var existing = await Db.BuyerStyleOrders.FindAsync(editingOrder.Id);
            if (existing != null)
            {
                existing.BuyerId = editingOrder.BuyerId;
                existing.StyleId = editingOrder.StyleId;
                existing.OrderNo = editingOrder.OrderNo;
            }
        }

        await Db.SaveChangesAsync();
        await LoadData();
        CancelEdit();
    }

    private async Task DeleteOrder(BuyerStyleOrderModel order)
    {
        Db.BuyerStyleOrders.Remove(order);
        await Db.SaveChangesAsync();
        await LoadData();
    }

    private async Task Synchronize()
    {
        if (editingOrder.BuyerId == 0 || editingOrder.StyleId == 0)
        {
            _syncMessage = "Please select a buyer and style first.";
            _syncSuccess = false;
            return;
        }

        _syncing = true;
        _syncMessage = string.Empty;
        _syncSuccess = false;
        StateHasChanged();

        try
        {
            var selectedBuyer = buyers.FirstOrDefault(b => b.Id == editingOrder.BuyerId);
            if (selectedBuyer == null || string.IsNullOrEmpty(selectedBuyer.Code))
            {
                _syncMessage = "Selected buyer not found or has no code.";
                _syncSuccess = false;
                return;
            }

            var selectedStyle = styles.FirstOrDefault(s => s.Id == editingOrder.StyleId);
            if (selectedStyle == null || string.IsNullOrEmpty(selectedStyle.StyleName))
            {
                _syncMessage = "Selected style not found.";
                _syncSuccess = false;
                return;
            }

            var buyerCode = selectedBuyer.Code;
            var styleName = selectedStyle.StyleName;

            var syncRecord = await Db.Synchronizings.FirstOrDefaultAsync(s => 
                s.ModelName == MODEL_NAME && s.BuyerId == editingOrder.BuyerId && s.StyleId == editingOrder.StyleId);
            if (syncRecord == null)
            {
                syncRecord = new SynchronizingModel
                {
                    ModelName = MODEL_NAME,
                    BuyerId = editingOrder.BuyerId,
                    StyleId = editingOrder.StyleId,
                    SynchDate = DateTime.Parse("2025-01-01")
                };
                Db.Synchronizings.Add(syncRecord);
                await Db.SaveChangesAsync();
            }

            var synchDate = syncRecord.SynchDate.ToString("yyyy-MM-dd");

            var existingOrderNos = orders
                .Where(o => o.BuyerId == editingOrder.BuyerId && o.StyleId == editingOrder.StyleId)
                .Select(o => o.OrderNo)
                .ToHashSet(StringComparer.OrdinalIgnoreCase);

            var newOrders = new List<BuyerStyleOrderModel>();

            var connectionString = "DSN=Stage64;UID=sql;PWD=sql;";

            using var conn = new OdbcConnection(connectionString);
            await conn.OpenAsync();

            var query = @"SELECT buyer_code, ord_style_no, ord_ref_no 
                          FROM dba.orders 
                          WHERE order_date >= ?
                            AND ord_type = 'g' 
                            AND buyer_code = ?
                            AND ord_style_no = ?
                          GROUP BY buyer_code, ord_style_no, ord_ref_no";

            using var cmd = new OdbcCommand(query, conn);
            cmd.Parameters.AddWithValue("@synchDate", synchDate);
            cmd.Parameters.AddWithValue("@buyer_code", buyerCode);
            cmd.Parameters.AddWithValue("@ord_style_no", styleName);
            using var reader = await cmd.ExecuteReaderAsync();

            while (await reader.ReadAsync())
            {
                var orderNo = reader.IsDBNull(2) ? "" : reader.GetString(2).Trim();
                
                if (string.IsNullOrEmpty(orderNo))
                    continue;

                if (existingOrderNos.Contains(orderNo))
                    continue;

                var newOrder = new BuyerStyleOrderModel
                {
                    BuyerId = editingOrder.BuyerId,
                    StyleId = editingOrder.StyleId,
                    OrderNo = orderNo
                };

                newOrders.Add(newOrder);
                existingOrderNos.Add(orderNo);
            }

            conn.Close();

            if (newOrders.Count > 0)
            {
                Db.BuyerStyleOrders.AddRange(newOrders);
                syncRecord.SynchDate = DateTime.Today;
                await Db.SaveChangesAsync();
                await LoadData();

                _syncSuccess = true;
                _syncMessage = $"Synchronization completed. Added {newOrders.Count} new order(s) for {selectedBuyer.Name} - {selectedStyle.StyleName}.";
            }
            else
            {
                _syncSuccess = true;
                _syncMessage = $"Synchronization completed. No new orders to add for {selectedBuyer.Name} - {selectedStyle.StyleName}.";
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to sync orders from Sybase");
            _syncSuccess = false;
            _syncMessage = $"Synchronization failed: {ex.Message}";
        }
        finally
        {
            _syncing = false;
            StateHasChanged();
        }
    }
}
