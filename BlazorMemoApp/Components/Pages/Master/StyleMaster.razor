@page "/master/styles"
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "Admin,User")]
@rendermode InteractiveServer
@using BlazorMemoApp.Models
@using Microsoft.EntityFrameworkCore
@using System.Data.Odbc
@inject BlazorMemoApp.Data.ApplicationDbContext Db
@inject ILogger<StyleMaster> Logger

<h1>Style Master</h1>
<hr />

<div class="row mb-3">
    <div class="col-auto">
        <button class="btn btn-primary" @onclick="ShowAddForm">Add New Style</button>
    </div>
    <div class="col-auto">
        <div class="input-group">
            <span class="input-group-text">Search</span>
            <input class="form-control" style="width:250px;" @bind="_searchText" @bind:event="oninput" placeholder="Buyer, Style Name..." />
        </div>
    </div>
    <div class="col-auto">
        <select class="form-select" style="width:100px;" @bind="_pageSize" @bind:after="OnPageSizeChanged">
            <option value="10">10</option>
            <option value="25">25</option>
            <option value="50">50</option>
            <option value="100">100</option>
        </select>
    </div>
</div>

@if (showForm)
{
    <div class="card mb-4">
        <div class="card-header">
            @(editingStyle.Id == 0 ? "Add New Style" : "Edit Style")
        </div>
        <div class="card-body">
            <EditForm Model="editingStyle" OnValidSubmit="SaveStyle">
                <DataAnnotationsValidator />
                <div class="row g-3">
                    <div class="col-md-4 position-relative">
                        <label class="form-label">Buyer</label>
                        <input class="form-control" 
                               @bind-value="buyerSearchText" 
                               @bind-value:event="oninput"
                               @onfocus="() => showBuyerDropdown = true"
                               placeholder="Type to filter..." />
                        @if (showBuyerDropdown && filteredBuyers.Any())
                        {
                            <div class="list-group position-absolute z-3" style="max-height:200px; overflow:auto; width:100%;">
                                @foreach (var buyer in filteredBuyers)
                                {
                                    <button type="button" class="list-group-item list-group-item-action" @onclick="() => SelectBuyer(buyer)">
                                        @buyer.Name - @buyer.NameAbbr
                                    </button>
                                }
                            </div>
                        }
                        <ValidationMessage For="() => editingStyle.BuyerId" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Style Name</label>
                        <InputText class="form-control" @bind-Value="editingStyle.StyleName" />
                        <ValidationMessage For="() => editingStyle.StyleName" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Description</label>
                        <InputText class="form-control" @bind-Value="editingStyle.Description" />
                    </div>
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-success">Save</button>
                    <button type="button" class="btn btn-secondary" @onclick="CancelEdit">Cancel</button>
                    <button type="button" class="btn btn-info" @onclick="Synchronize" disabled="@(_syncing || editingStyle.BuyerId == 0)">
                        @(_syncing ? "Synchronizing..." : "Synchronize")
                    </button>
                </div>
                @if (!string.IsNullOrEmpty(_syncMessage))
                {
                    <div class="alert @(_syncSuccess ? "alert-success" : "alert-danger") alert-dismissible fade show mt-2" role="alert">
                        @_syncMessage
                        <button type="button" class="btn-close" @onclick="() => _syncMessage = string.Empty"></button>
                    </div>
                }
            </EditForm>
        </div>
    </div>
}

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Buyer</th>
            <th>Style Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var style in PagedData)
        {
            <tr>
                <td>@style.Id</td>
                <td>@(style.Buyer?.Name ?? "-") - @(style.Buyer?.NameAbbr ?? "")</td>
                <td>@style.StyleName</td>
                <td>@style.Description</td>
                <td>
                    <button class="btn btn-sm btn-warning" @onclick="() => EditStyle(style)">Edit</button>
                    <button class="btn btn-sm btn-danger" @onclick="() => DeleteStyle(style)">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex justify-content-between align-items-center">
    <div>Showing @(FilteredData.Any() ? (_currentPage - 1) * _pageSize + 1 : 0) - @(Math.Min(_currentPage * _pageSize, FilteredData.Count())) of @FilteredData.Count()</div>
    <nav>
        <ul class="pagination pagination-sm mb-0">
            <li class="page-item @(_currentPage == 1 ? "disabled" : "")">
                <button type="button" class="page-link" @onclick="PrevPage" disabled="@(_currentPage == 1)">Prev</button>
            </li>
            @for (var p = 1; p <= Math.Min(TotalPages, 10); p++)
            {
                var page = p;
                <li class="page-item @(p == _currentPage ? "active" : "")">
                    <button type="button" class="page-link" @onclick="() => GotoPage(page)">@p</button>
                </li>
            }
            @if (TotalPages > 10)
            {
                <li class="page-item disabled"><span class="page-link">...</span></li>
                <li class="page-item @(TotalPages == _currentPage ? "active" : "")">
                    <button type="button" class="page-link" @onclick="() => GotoPage(TotalPages)">@TotalPages</button>
                </li>
            }
            <li class="page-item @(_currentPage == TotalPages ? "disabled" : "")">
                <button type="button" class="page-link" @onclick="NextPage" disabled="@(_currentPage == TotalPages)">Next</button>
            </li>
        </ul>
    </nav>
</div>

@code {
    private List<BuyerStyleModel> styles = new();
    private List<MemoAdressModel> buyers = new();
    private BuyerStyleModel editingStyle = new();
    private bool showForm = false;
    
    private string buyerSearchText = string.Empty;
    private bool showBuyerDropdown = false;
    private string _searchText = string.Empty;
    private int _pageSize = 10;
    private int _currentPage = 1;
    private bool _syncing = false;
    private string _syncMessage = string.Empty;
    private bool _syncSuccess = false;
    private const string MODEL_NAME = "StyleMaster";
    
    private IEnumerable<MemoAdressModel> filteredBuyers => 
        string.IsNullOrWhiteSpace(buyerSearchText)
            ? buyers
            : buyers.Where(b => 
                (b.Name?.Contains(buyerSearchText, StringComparison.OrdinalIgnoreCase) ?? false) ||
                (b.NameAbbr?.Contains(buyerSearchText, StringComparison.OrdinalIgnoreCase) ?? false));

    private IEnumerable<BuyerStyleModel> FilteredData => string.IsNullOrWhiteSpace(_searchText)
        ? styles
        : styles.Where(s =>
            (s.Buyer?.Name ?? "").Contains(_searchText, StringComparison.OrdinalIgnoreCase) ||
            (s.Buyer?.NameAbbr ?? "").Contains(_searchText, StringComparison.OrdinalIgnoreCase) ||
            (s.StyleName ?? "").Contains(_searchText, StringComparison.OrdinalIgnoreCase) ||
            (s.Description ?? "").Contains(_searchText, StringComparison.OrdinalIgnoreCase));

    private List<BuyerStyleModel> PagedData => FilteredData.Skip((_currentPage - 1) * _pageSize).Take(_pageSize).ToList();
    private int TotalPages => Math.Max(1, (int)Math.Ceiling(FilteredData.Count() / (double)_pageSize));

    private void OnPageSizeChanged() => _currentPage = 1;
    private void PrevPage() { if (_currentPage > 1) _currentPage--; }
    private void NextPage() { if (_currentPage < TotalPages) _currentPage++; }
    private void GotoPage(int p) => _currentPage = Math.Clamp(p, 1, TotalPages);

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        styles = await Db.BuyerStyles.Include(s => s.Buyer).ToListAsync();
        buyers = await Db.MemoAddresses.Where(a => a.Type.Contains("B")).ToListAsync();
    }

    private void ShowAddForm()
    {
        editingStyle = new BuyerStyleModel();
        buyerSearchText = string.Empty;
        showForm = true;
    }

    private void EditStyle(BuyerStyleModel style)
    {
        editingStyle = new BuyerStyleModel
        {
            Id = style.Id,
            BuyerId = style.BuyerId,
            StyleName = style.StyleName,
            Description = style.Description
        };
        var buyer = buyers.FirstOrDefault(b => b.Id == style.BuyerId);
        buyerSearchText = buyer != null ? $"{buyer.Name} - {buyer.NameAbbr}" : string.Empty;
        showForm = true;
    }

    private void CancelEdit()
    {
        showForm = false;
        editingStyle = new BuyerStyleModel();
        buyerSearchText = string.Empty;
        showBuyerDropdown = false;
    }

    private void SelectBuyer(MemoAdressModel buyer)
    {
        editingStyle.BuyerId = buyer.Id;
        buyerSearchText = $"{buyer.Name} - {buyer.NameAbbr}";
        showBuyerDropdown = false;
    }

    private async Task SaveStyle()
    {
        if (editingStyle.BuyerId == 0 || string.IsNullOrWhiteSpace(editingStyle.StyleName))
        {
            return;
        }

        if (editingStyle.Id == 0)
        {
            Db.BuyerStyles.Add(editingStyle);
        }
        else
        {
            var existing = await Db.BuyerStyles.FindAsync(editingStyle.Id);
            if (existing != null)
            {
                existing.BuyerId = editingStyle.BuyerId;
                existing.StyleName = editingStyle.StyleName;
                existing.Description = editingStyle.Description;
            }
        }

        await Db.SaveChangesAsync();
        await LoadData();
        CancelEdit();
    }

    private async Task DeleteStyle(BuyerStyleModel style)
    {
        Db.BuyerStyles.Remove(style);
        await Db.SaveChangesAsync();
        await LoadData();
    }

    private async Task Synchronize()
    {
        if (editingStyle.BuyerId == 0)
        {
            _syncMessage = "Please select a buyer first.";
            _syncSuccess = false;
            return;
        }

        _syncing = true;
        _syncMessage = string.Empty;
        _syncSuccess = false;
        StateHasChanged();

        try
        {
            var selectedBuyer = buyers.FirstOrDefault(b => b.Id == editingStyle.BuyerId);
            if (selectedBuyer == null || string.IsNullOrEmpty(selectedBuyer.Code))
            {
                _syncMessage = "Selected buyer not found or has no code.";
                _syncSuccess = false;
                return;
            }

            var buyerCode = selectedBuyer.Code;

            var syncRecord = await Db.Synchronizings.FirstOrDefaultAsync(s => 
                s.ModelName == MODEL_NAME && s.BuyerId == editingStyle.BuyerId);
            if (syncRecord == null)
            {
                syncRecord = new SynchronizingModel
                {
                    ModelName = MODEL_NAME,
                    BuyerId = editingStyle.BuyerId,
                    SynchDate = DateTime.Parse("2025-01-01")
                };
                Db.Synchronizings.Add(syncRecord);
                await Db.SaveChangesAsync();
            }

            var synchDate = syncRecord.SynchDate.ToString("yyyy-MM-dd");

            var existingStyleNames = styles
                .Where(s => s.BuyerId == editingStyle.BuyerId)
                .Select(s => s.StyleName)
                .ToHashSet(StringComparer.OrdinalIgnoreCase);

            var newStyles = new List<BuyerStyleModel>();

            var connectionString = "DSN=Stage64;UID=sql;PWD=sql;";

            using var conn = new OdbcConnection(connectionString);
            await conn.OpenAsync();

            var query = @"SELECT buyer_code, ord_style_no, ord_garment_name 
                          FROM dba.orders 
                          WHERE order_date >= ?
                            AND ord_type = 'g' 
                            AND buyer_code = ?
                          GROUP BY buyer_code, ord_style_no, ord_garment_name";

            using var cmd = new OdbcCommand(query, conn);
            cmd.Parameters.AddWithValue("@synchDate", synchDate);
            cmd.Parameters.AddWithValue("@buyer_code", buyerCode);
            using var reader = await cmd.ExecuteReaderAsync();

            while (await reader.ReadAsync())
            {
                var styleName = reader.IsDBNull(1) ? "" : reader.GetString(1).Trim();
                
                if (string.IsNullOrEmpty(styleName))
                    continue;

                if (existingStyleNames.Contains(styleName))
                    continue;

                var newStyle = new BuyerStyleModel
                {
                    BuyerId = editingStyle.BuyerId,
                    StyleName = styleName,
                    Description = reader.IsDBNull(2) ? "" : reader.GetString(2).Trim()
                };

                newStyles.Add(newStyle);
                existingStyleNames.Add(styleName);
            }

            conn.Close();

            if (newStyles.Count > 0)
            {
                Db.BuyerStyles.AddRange(newStyles);
                syncRecord.SynchDate = DateTime.Today;
                await Db.SaveChangesAsync();
                await LoadData();

                _syncSuccess = true;
                _syncMessage = $"Synchronization completed. Added {newStyles.Count} new style(s) for buyer {selectedBuyer.Name}.";
            }
            else
            {
                _syncSuccess = true;
                _syncMessage = $"Synchronization completed. No new styles to add for buyer {selectedBuyer.Name}.";
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to sync styles from Sybase");
            _syncSuccess = false;
            _syncMessage = $"Synchronization failed: {ex.Message}";
        }
        finally
        {
            _syncing = false;
            StateHasChanged();
        }
    }
}
